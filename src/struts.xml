<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<package name="struts2" namespace="/action" extends="struts-default">
		<action name="register" class="action.Register">
			<result name="success">/member/login.jsp</result>
			<result name="failure">/member/register.jsp</result>
		</action>
		<action name="login" class="action.Login">
			<result name="success">/member/index.jsp</result>
			<result name="failure">/member/login.jsp</result>
		</action>
		<action name="viewcard" class="action.ViewCard">
			<result name="success">/member/viewcard.jsp</result>
		</action>
		<action name="quit" class="action.Quit">
			<result name="success">index.jsp</result>
		</action>
	</package>
</struts>
